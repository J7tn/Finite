<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Splash screen theme for API 31+ -->
    <style name="AppTheme.NoActionBarLaunch" parent="Theme.SplashScreen">
        <item name="android:background">@drawable/splash</item>
        <item name="android:windowSplashScreenBackground">@android:color/white</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@android:color/white</item>
        <item name="android:windowSplashScreenBrandingImage">@null</item>
        <!-- Ensure proper edge-to-edge behavior -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>
</resources> 